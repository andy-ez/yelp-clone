%header
  %div.header
    %div.content
      =link_to 'Home', root_path, class: 'brand'
      %span#sign-up= link_to "Sign Up", register_path if !logged_in?
      %button.c-hamburger.c-hamburger--htx
        %span toggle menu
  %nav
    %div.content
      %ul.nav-list
        %li= link_to "Businesses", businesses_path
        %li= link_to "Add Business", new_business_path
        %li= link_to "Recent Reviews", reviews_path
        - if logged_in?
          %li= link_to "My Profile", user_path(current_user)
      %span#log-in= logged_in? ? link_to("Log Out", logout_path) : link_to( "Log In", login_path)